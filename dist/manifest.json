{
  "manifest_version": 3,
  "name": "Social Media Scanner",
  "version": "1.0.0",
  "description": "Reverse image search and username checker for social media platforms",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_title": "Open Social Media Scanner"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https:;"
  }
}
